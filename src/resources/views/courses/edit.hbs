<div class="mt-4">
  <h3>Update new course</h3>

  <form method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <div class="form-group">
        <label for="name">Name</label>
        <input value="{{course.name}}" type="text" class="form-control" id="name" name="name" />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input value="{{course.description}}" type="text" class="form-control" id="description" name="description" />
      </div>

      <div class="form-group">
        <label for="videoId">videoId</label>
        <input value="{{course.videoId}}" type="text" class="form-control" id="videoId" name="videoId" />
      </div>
      
      <div class="form-group">
        <label for="level">level</label>
        <input value="{{course.level}}" type="text" class="form-control" id="level" name="level" />
      </div>

      <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>